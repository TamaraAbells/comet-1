{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": ["node"],
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "newLine": "LF",
    "allowJs": true,
    "checkJs": true,
    "lib": ["es2020"]
  },
  "types": ["class-transformer"],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
