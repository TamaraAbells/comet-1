FROM node:alpine

ARG PACKAGE_PATH
ARG WORKING_DIR

WORKDIR ${WORKING_DIR}

COPY ${PACKAGE_PATH}/package.json ${WORKING_DIR}
COPY ${PACKAGE_PATH}/yarn.lock ${WORKING_DIR}

RUN npm install --global --force yarn

RUN yarn

COPY ${PACKAGE_PATH} ${WORKING_DIR}

VOLUME $WORKING_DIR/node_modules

WORKDIR /
